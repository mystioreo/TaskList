<!DOCTYPE html>
<html>
  <head>
    <title>TaskList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Tasklist</h1>

    <main>
      <nav>
        <h2><%= link_to "Add Task", new_task_path %> </h2>
        <h2><%= link_to "All Tasks", tasks_path %> </h2>
      </nav>

      <section id='taskbox'>
        <%= yield %>
      </section>
  </body>
</html>
